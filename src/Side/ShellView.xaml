<Window x:Class="Side.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:avalonDock="http://schemas.xceed.com/wpf/xaml/avalondock"
        xmlns:prism="http://www.codeplex.com/prism"
        Title="SIDE"
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary>
            
        </ResourceDictionary>
    </Window.Resources>
    <Border>
        <DockPanel>
            <!--Menu-->
            <Menu DockPanel.Dock="Top" IsMainMenu="True" x:Name="SideMainMenu" VerticalAlignment="Top">
                <MenuItem Header="File">
                    <MenuItem Header="New project"/>
                    <MenuItem Header="Exit"/>
                </MenuItem>
                <MenuItem Header="Debug">
                    <MenuItem Header="Interpret"/>
                </MenuItem>
                <MenuItem Header="Help"/>
            </Menu>
            <!-- Toolbar TODO: Icons -->
            <Menu DockPanel.Dock="Top">
                <MenuItem Width="24" Height="24" Header="C"/>
                <MenuItem Width="24" Height="24" Header="R"/>
            </Menu>
            <!--Status bar-->
            <StatusBar x:Name="SideStatusBar" DockPanel.Dock="Bottom">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <!--Status message-->
                <StatusBarItem>
                    <TextBlock Text="Ready"/>
                </StatusBarItem>
                <!--Line number-->
                <StatusBarItem Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Ln " />
                        <TextBlock Text="42"/>
                    </StackPanel>
                </StatusBarItem>
                <!--Column number-->
                <StatusBarItem Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Col " />
                        <TextBlock Text="42" />
                    </StackPanel>
                </StatusBarItem>
                <!--Character number-->
                <StatusBarItem Grid.Column="3">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Ch " />
                        <TextBlock Text="12" />
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>
            <ItemsControl Name="CodeBoxRegion" prism:RegionManager.RegionName="CodeBoxRegion"/>
        </DockPanel>
    </Border>
</Window>

